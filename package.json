{
  "name": "typescript-backend-aws-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda向けTypeScript-Expressデモリポジトリ",
  "type": "module",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json && tsc-alias && npm run copy-json",
    "copy-json": "cd ./src && cp --parents -r ./**/*.json ../dist && cd ..",
    "start-dev": "node dist/app/app.local",
    "dev": "nodemon -L -e 'ts,yml,json' -w 'src' -w './.env' --exec 'npm run copy-json && tsc --noEmit && tsx src/app/app.local.ts'",
    "local-postgres": "docker-compose -f ./tools/RDS-local/docker-compose.yml up",
    "deploy": "serverless deploy --verbose",
    "remove": "serverless remove --verbose",
    "test": "tsc --noEmit && vitest --passWithNoTests",
    "lint": "eslint --ignore-pattern .gitignore .",
    "redoc": "redocly preview-docs './src/app/openapi.json'",
    "generate-api-types": "openapi-typescript ./src/app/openapi.json --output ./src/app/schema.ts && prettier ./src/app/schema.ts --write"
  },
  "repository": {
    "type": "git",
    "url": "https://repos.tdctechsupport.com/dt-guilds/container/typescript-backend-aws-lambda"
  },
  "author": "",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.637.0",
    "@vendia/serverless-express": "^4.12.6",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-openapi": "^12.1.3",
    "log4js": "^6.9.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@redocly/cli": "^1.21.0",
    "@stylistic/eslint-plugin": "^2.6.4",
    "@stylistic/eslint-plugin-js": "^2.6.4",
    "@tsconfig/node20": "^20.1.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/aws-lambda": "^8.10.143",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitest/coverage-v8": "^2.0.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "nodemon": "^3.1.4",
    "openapi-typescript": "^7.3.0",
    "prettier": "^3.3.3",
    "serverless": "^3.39.0",
    "serverless-deployment-bucket": "^1.6.0",
    "serverless-domain-manager": "^7.3.8",
    "serverless-plugin-resource-tagging": "^1.2.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.18.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0",
    "vitest": "^2.0.5"
  }
}
